local Toggle2 = Tab1:CreateToggle({
   Name = "üëª Show Ghost's body",
   CurrentValue = false,
   Flag = "Toggle1",
   Callback = function(bool)
    if bool then
        for _, meshPart in pairs(ghost.VisibleParts:GetChildren()) do
