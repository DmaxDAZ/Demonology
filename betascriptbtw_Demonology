local function dropItemNoclip(tab, name, itemName, offset, showTemp)
    tab:CreateToggle({
        Name = name,
        CurrentValue = false,
        Flag = name,
        Callback = function(enabled)
            local char = PL.Character or PL.CharacterAdded:Wait()
            local dropEvent = RSStorage:WaitForChild("Events"):WaitForChild("RequestItemDrop")

            -- Drop all items to sync inventory
            for i = 1, 3 do
                dropEvent:FireServer("InvSlot"..i)
            end
            task.wait(0.3)

            if toggles[itemName] then
                toggles[itemName]:Disconnect()
                toggles[itemName] = nil
            end

            if enabled then
                toggles[itemName] = RS.RenderStepped:Connect(function(delta)
                    local ghostModel = workspace:FindFirstChild("Ghost")
                    if not ghostModel then return end
                    local hrp = ghostModel:FindFirstChild("HumanoidRootPart")
                    if not hrp then return end

                    local items = getAllItems(itemName)
                    for _, it in ipairs(items) do
                        if it and it.Parent then
                            local pp = it.PrimaryPart or it:FindFirstChildWhichIsA("BasePart", true)
                            if pp and pp:IsA("BasePart") then
                                setNetworkOwner(pp)
                                pp.CanCollide = false

                                -- BodyPosition
                                local bp = pp:FindFirstChild("FollowBP")
                                if not bp then
                                    bp = Instance.new("BodyPosition")
                                    bp.Name = "FollowBP"
                                    bp.MaxForce = Vector3.new(1e5, 1e5, 1e5)
                                    bp.D = 15  -- ‡∏ó‡∏≥‡πÉ‡∏´‡πâ‡∏ä‡πâ‡∏≤‡∏•‡∏á
                                    bp.P = 2000 -- ‡∏ó‡∏≥‡πÉ‡∏´‡πâ smooth
                                    bp.Parent = pp
                                end
                                bp.Position = hrp.Position + offset

                                -- BodyGyro
                                local bg = pp:FindFirstChild("FollowBG")
                                if not bg then
                                    bg = Instance.new("BodyGyro")
                                    bg.Name = "FollowBG"
                                    bg.MaxTorque = Vector3.new(1e5, 1e5, 1e5)
                                    bg.D = 15
                                    bg.P = 2000
                                    bg.Parent = pp
                                end
                                bg.CFrame = CFrame.new(pp.Position, hrp.Position)

                                -- Thermometer update
                                if showTemp and it:FindFirstChild("Screen") then
                                    local screen = it.Screen
                                    local surfaceGui = screen:FindFirstChild("SurfaceGui")
                                    local frame = surfaceGui and surfaceGui:FindFirstChild("Frame")
                                    local label = frame and frame:FindFirstChildWhichIsA("TextLabel")
                                    if label then
                                        temperature = label.Text
                                    end
                                end
                            end
                        end
                    end
                end)
            else
                -- ‡∏õ‡∏¥‡∏î toggle: ‡∏ß‡∏≤‡∏õ‡∏Å‡∏•‡∏±‡∏ö‡∏°‡∏≤‡∏´‡∏≤‡∏ï‡∏±‡∏ß‡πÄ‡∏£‡∏≤
                local items = getAllItems(itemName)
                for _, it in ipairs(items) do
                    if it and it.Parent then
                        local pp = it.PrimaryPart or it:FindFirstChildWhichIsA("BasePart", true)
                        if pp and pp:IsA("BasePart") then
                            pp.CanCollide = true
                            pp:SetNetworkOwner(nil)

                            local bp = pp:FindFirstChild("FollowBP")
                            if bp then bp:Destroy() end
                            local bg = pp:FindFirstChild("FollowBG")
                            if bg then bg:Destroy() end

                            -- ‡∏ß‡∏≤‡∏õ‡∏Å‡∏•‡∏±‡∏ö‡πÑ‡∏õ‡∏ï‡∏±‡∏ß‡∏ú‡∏π‡πâ‡πÄ‡∏•‡πà‡∏ô
                            if char and char:FindFirstChild("HumanoidRootPart") then
                                pp.CFrame = char.HumanoidRootPart.CFrame + Vector3.new(0,3,0)
                            end
                        end
                    end
                end

                if toggles[itemName] then
                    toggles[itemName]:Disconnect()
                    toggles[itemName] = nil
                end
            end
        end
    })
end



